{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noResolve": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "es5",
            "es6"
        ],
        "strictNullChecks": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}